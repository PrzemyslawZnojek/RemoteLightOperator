<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/add_activity_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Name:"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/add_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_activity_name_label"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/add_activity_irradiation_time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_activity_name"
            android:text="Irradiation time:"
            android:layout_marginLeft="15dp"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/add_activity_irradiation_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_below="@id/add_activity_irradiation_time_label"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/add_activity_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:layout_below="@id/add_activity_irradiation_time"
            android:layout_marginLeft="15dp"
            android:textSize="28sp" />

        <EditText
            android:id="@+id/add_activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_activity_description_label"
            android:layout_marginLeft="15dp"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/add_activity_save_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_activity_description"
            android:layout_centerHorizontal="true"
            android:text="SAVE" />
    </RelativeLayout>
</RelativeLayout>