<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Name"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Description"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/irradiationTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Irradiation Time"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/irradiationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/irradiationTimeTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/irradiationTime"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Rate"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rateTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/rateCountTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Rate Count"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rateCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rateCountTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <Button
            android:id="@+id/addToMyPlants"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rateCount"
            android:layout_centerHorizontal="true"
            android:text="Add to My Plants"  />

        <TextView
            android:id="@+id/rateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addToMyPlants"
            android:layout_centerHorizontal="true"
            android:text="Rate The Plant"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rateText"
            android:layout_centerHorizontal="true"
            android:stepSize="1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/descriptionImageLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dip"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_small" />


    </RelativeLayout>
</RelativeLayout>