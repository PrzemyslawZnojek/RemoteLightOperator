div(class='card mb-3')
  div(class='card-header') Ustawienia
  div(class='card-body')
    h4 Lokalizacja
    div(style='display: flex; align-items: center')
      input(type='checkbox', checked=config.locationFromIp, id='location-auto-checkbox')
      div(style='text-indent: 5px') automatyczna
    div(class='mt-3', style='display: flex; align-items: center')
      div
        strong Kraj:
        | 
        input(type='text', value=config.country, disabled=config.locationFromIp, id='location-country')
      div(class='ml-3')
        strong Miasto:
        | 
        input(type='text', value=config.city, disabled=config.locationFromIp, id='location-city')
      div(class='ml-3')
        strong Współrzędne:
        |
        - var coords = `${config.lat}, ${config.lon}`
        input(type='text', value=coords, disabled, id='location-coords')
        - var buttonDisplay = config.locationFromIp ? 'none' : 'block'
    p(style='color: red; display: none', id='location-error')
    button(class='mt-2', id='location-submit', type='button', style=`display: ${buttonDisplay}`) Ustaw
    div(class='mt-4')
      p
        strong Wschód słońca:
        | 
        if config.sunriseTime
          span(id='sunrise-time')= `${config.sunriseTime.getHours()}:${config.sunriseTime.getMinutes()}`
      p
        strong Zachód słońca:
        | 
        if config.sunsetTime
          span(id='sunset-time')= `${config.sunsetTime.getHours()}:${config.sunsetTime.getMinutes()}`